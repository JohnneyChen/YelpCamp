<% layout('layouts/boilerplate') %>
    <div class="row">
        <h1 class="text-center">Edit Campground</h1>
        <div class="col-md-6 offset-md-3">
            <form action="/campgrounds/<%=campground.id%>?_method=PATCH" method="POST" novalidate class="validated-form"
                enctype="multipart/form-data">
                <div class="mb-3">
                    <label for="titleInput" class="form-label">Title:</label>
                    <input type="text" name="campground[title]" class="form-control" id="titleInput"
                        value="<%=campground.title%>" required>
                    <div class="valid-feedback">Looks Good!</div>
                </div>
                <div class="mb-3">
                    <label for="locationInput" class="form-label">Location:</label>
                    <input type="text" name="campground[location]" class="form-control" id="locationInput"
                        value="<%=campground.location%>" required>
                    <div class="valid-feedback">Looks Good!</div>
                </div>
                <div class=" mb-3">
                    <div class="mb-3">
                        <label for="formFileMultiple" class="form-label custom-file-label">Upload Images:</label>
                        <input class="form-control custom-file" type="file" id="formFileMultiple" multiple name="image">
                    </div>
                </div>
                <div class=" mb-3">
                    <label for="descriptionInput" class="form-label">Description:</label>
                    <textarea name="campground[description]" class="form-control" id="descriptionInput" cols="25"
                        rows="7" required><%=campground.description%></textarea>
                    <div class="valid-feedback">Looks Good!</div>
                </div>
                <div class="mb-3">
                    <label for="priceInput">Price:</label>
                    <div class="input-group">
                        <span class="input-group-text">$</span>
                        <input id="priceInput" name="campground[price]" type="number" placeholder="0"
                            class="form-control" aria-label="Amount (to the nearest dollar)" step="0.01"
                            value="<%=campground.price%>" required>
                        <div class="valid-feedback">Looks Good!</div>
                    </div>
                </div>
                <div class="mb-3">
                    <% campground.images.forEach(function(img, i) { %>
                        <img src="<%=img.thumbnail %>" class="img-thumbnail" alt="">
                        <div class="form-check-inline">
                            <input type="checkbox" id="image-<%=i%>" name="deleteImages[]" value="<%=img.filename%>">
                        </div>
                        <label for="image-<%=i%>">Delete?</label>
                        <% })%>
                </div>
                <div class=" mb-3">
                    <button class="btn btn-success">Edit Campground</button>
                </div>
            </form>
            <div>
                <a href="/campgrounds/<%=campground.id%>">Back to Campground</a>
            </div>
        </div>
    </div>